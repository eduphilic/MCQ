{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">= 8.10",
    "yarn": ">= 1.5.1"
  },
  "precommit": [
    "lint"
  ],
  "scripts": {
    "start": "lerna run --parallel start",
    "build": "lerna run --stream --concurrency 1 build ",
    "clean": "lerna run --stream clean",
    "test": "cross-env CI=1 lerna run --stream test",
    "lint": "tslint -p ./"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/react-dom": "^16.0.5",
    "@types/react-helmet": "^5.0.5",
    "@types/react-router-dom": "^4.2.6",
    "@types/storybook__addon-actions": "^3.0.3",
    "@types/storybook__addon-info": "^3.2.2",
    "@types/storybook__addon-knobs": "^3.3.1",
    "@types/storybook__addon-options": "^3.2.0",
    "@types/storybook__react": "^3.0.7",
    "@types/webpack": "^4.1.3",
    "cross-env": "^5.1.4",
    "lerna": "^2.10.2",
    "pre-commit": "^1.2.2",
    "prettier": "^1.12.1",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.8.0",
    "tslint-config-prettier": "^1.12.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.8.1"
  }
}
