{
  "private": true,
  "engines": {
    "node": "8"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "start": "wsrun clean && yarn generate:firebaseFunctionsPackageJson && wsrun start",
    "build": "wsrun clean && yarn generate:firebaseFunctionsPackageJson && wsrun build",
    "serve": "firebase serve --only functions,hosting",
    "serve:production": "cross-env NODE_ENV=production yarn serve",
    "clean": "rimraf dist",
    "generate:firebaseFunctionsPackageJson": "ts-node --project ./tools/tsconfig.json ./tools/generateFirebaseFunctionsPackageJson.ts"
  },
  "dependencies": {
    "@types/koa": "^2.0.47",
    "@types/koa-router": "^7.0.35",
    "@types/next": "^7.0.5",
    "@types/node": "^10.12.10",
    "@types/react": "^16.7.6",
    "@types/react-dom": "^16.0.9",
    "cross-env": "^5.2.0",
    "firebase-admin": "^6.2.0",
    "firebase-functions": "^2.1.0",
    "firebase-tools": "^6.1.1",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6",
    "wsrun": "^3.4.0"
  }
}
