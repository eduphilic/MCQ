{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "baseUrl": "./packages",
    "allowJs": true,
    "checkJs": true,
    "jsx": "react",
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": ["./typings", "./node_modules/@types"],
    "skipLibCheck": true,
    "paths": {
      "@join-uniform/*": ["./join-uniform-*/src"],
      "@join-uniform/graphql/*": ["./join-uniform-graphql/src/*"]
    }
  }
}
