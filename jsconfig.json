{
  "compilerOptions": {
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "paths": {
      "site-components/*": ["./packages/site-components/*"]
    }
  },
  "include": [
    "packages/site-components/*.js",
    "packages/site-components/assets/*",
    "packages/site-landing/src/**/*.js",
    "packages/site-storybook/*.js"
  ],
  "exclude": ["node_modules", "packages/**/node_modules", "packages/**/dist"]
}
