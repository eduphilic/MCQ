{
  "compilerOptions": {
    "target": "esnext",
    // Using module "commonjs" so that ts-node, which is used by Webpack, can
    // make use of the "import" syntax. Source code compilation will be handled
    // by Babel and thus will not be affected by this setting.
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "baseUrl": "./src",
    "allowJs": true,
    "checkJs": true,
    "jsx": "react",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "include": ["./webpack.config.ts", "./src/**/*", "./tools/**/*"]
}
