{
  "extends": [
    "tslint:latest",
    "tslint-eslint-rules",
    "tslint-config-airbnb",
    "tslint-config-prettier"
  ],
  "rulesDirectory": ["tslint-plugin-prettier"],
  "rules": {
    "member-access": false,
    "interface-name": [true, "never-prefix"],
    "no-submodule-imports": [
      true,
      "material-ui",
      "@material-ui/icons",
      "components"
    ],
    "import-name": [
      true,
      { "react": "React", "reactDom": "ReactDOM", "l10n": "strings" }
    ],
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case",
      "ban-keywords"
    ],
    "array-type": false,
    "object-shorthand-properties-first": false,
    "prettier": true
  }
}
